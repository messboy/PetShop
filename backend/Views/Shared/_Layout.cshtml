
<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - MVC Practice</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/StyleSheet.css" rel="stylesheet" />
</head>
<body>
    <div class=" navbar navbar-default navbar-fixed-top" style=" margin:0 auto;">
        <div class="container col-sm-offset-2">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>

                <a href="@Url.Action("Index", "Home", new { @class = "navbar-brand" })">
                    <img src="~/Content/Img/Logo.gif" style="height:50px" />
                </a>

            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav pull-right">
                    <li>@Html.ActionLink("Catergory", "Index", "Categories")</li>
                    <li>@Html.ActionLink("Products", "Index", "Products")</li>
                    <li>@Html.ActionLink("Items", "Index", "Items")</li>
                    
                    @if (HttpContext.Current.User.Identity.IsAuthenticated)
                    {
                        <li class="dropdown pull-right">
                            <a href="#" data-toggle="dropdown" class="dropdown-toggle">User：@(User.Identity.Name) <b class="caret"></b></a>
                            <ul class="dropdown-menu">
                                <li><a href=@Url.Action("Logout", "Home")>logout</a></li>
                            </ul>
                        </li>
                    }
                    else
                    {
                        <li><a href=@Url.Action("Logon", "Home")>Sign In</a></li>
                    }
                        
                </ul>
            </div>
        </div>
    </div>


    <div class="container body-content" style="width:780px">
        @RenderBody()
        <hr />
        <footer>
            @*<p>&copy; @DateTime.Now.Year - 我的 ASP.NET 應用程式</p>*@
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
